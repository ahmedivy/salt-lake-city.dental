---
interface Props {
  title: string;
  items: {
    title: string;
    url: string;
  }[];
}

const { title, items } = Astro.props;
---

<div class="flex flex-col gap-4">
  <h4 class="text-[#BEC4C1] text-[12px] font-medium uppercase">{title}</h4>
  {
    items.map((item) => (
      <a href={item.url} class="text-white">
        {item.title}
      </a>
    ))
  }
</div>
