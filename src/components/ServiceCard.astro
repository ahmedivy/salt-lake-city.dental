---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  description: string;
}

const { src, alt, description } = Astro.props;
---

<div class="flex flex-col bg-white rounded-lg max-w-[300px] shadow-sm hover:shadow-md transition-all">
  <Image src={src} alt={alt} class="rounded-t-lg" />
  <p class="text-sm text-center my-4 font-medium">
    {description}
  </p>
</div>
